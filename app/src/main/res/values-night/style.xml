<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleimage">

        <item name="android:tint">@color/black</item>
        <item name="android:background">@drawable/gradietpink_red_ruby</item>
    </style>

    <style name="styleText">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">"Calendario Ruby"</item>
        <item name="android:background">#ADFFC9E7</item>



    </style>

    <style name="styleCal">
        <item name="android:background">@color/red</item>
    </style>

    <style name="relojStyle2">
        <item name="android:textSize">50sp</item>
        <item name="android:background">@drawable/gradient_aquamarine_gold</item>
        <item name="android:backgroundTint">@color/ruby</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="styleLayaut">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="styleSwitch">
        <item name="android:background">@color/aquaMarine</item>
        <item name="android:backgroundTint">@color/ruby</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="android:textColor">@color/aquaMarine</item>
        <item name="android:trackTint">@color/gold</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>